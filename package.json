{
  "name": "jomini-enterprise-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc --project ./ && npm run copy-files",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config --transpile-only ./entry.ts dotenv_config_path=.env",
    "serve": "nodemon",
    "copy-files": "cp -r ./public/ ./build/public && cp -r ./views/ ./build/views",
    "seed": "NODE_ENV=development ts-node -r tsconfig-paths/register -r dotenv/config --transpile-only database/seed.ts dotenv_config_path=.env.dev"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-validator": "^6.9.2",
    "firebase-admin": "^9.5.0",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.7",
    "pg": "^8.5.1",
    "puppeteer": "^7.1.0",
    "puppeteer-extra": "^3.1.17",
    "puppeteer-extra-plugin-stealth": "^2.7.5",
    "shortid": "^2.2.16",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.31",
    "typescript": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.35",
    "@types/puppeteer": "^5.4.3",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1"
  }
}
